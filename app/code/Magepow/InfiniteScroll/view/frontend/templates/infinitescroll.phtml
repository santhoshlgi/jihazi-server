<script type="text/javascript">
    require(['jquery', 'magepow/infinitescroll'], function ($) {
        "use strict";
        $(document).ready(function () {
            $('body').addClass('infinitescroll');
            var ias = $.ias({
                container: "<?php echo $content;?>",
